<h1>All Games</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Home team</th>
      <th>Away team</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.date %></td>
        <td><%= link_to game.home_team.name, team_path(game.home_team) %></td>
        <td><%= link_to game.away_team.name, team_path(game.away_team) %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', game, class:"btn" %>
            <%= link_to 'Edit', edit_game_path(game), class:"btn" %>
            <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, class:"btn btn-success" %>
