<h1>Listing team_games</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Game</th>
      <th>Home team</th>
      <th>Away team</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @team_games.each do |team_game| %>
      <tr>
        <td><%= team_game.team_id %></td>
        <td><%= team_game.game_id %></td>
        <td><%= team_game.home_team %></td>
        <td><%= team_game.away_team %></td>
        <td><%= link_to 'Show', team_game %></td>
        <td><%= link_to 'Edit', edit_team_game_path(team_game) %></td>
        <td><%= link_to 'Destroy', team_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

