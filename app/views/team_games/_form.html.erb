<%= simple_form_for(@team_game) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :team_id %>
    <%= f.input :game_id %>
    <%= f.input :home_team %>
    <%= f.input :away_team %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
