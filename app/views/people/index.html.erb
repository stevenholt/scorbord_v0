<h1>All People</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', person, class:"btn" %>
            <%= link_to 'Edit', edit_person_path(person), class:"btn" %>
            <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path, class:"btn btn-success" %>
