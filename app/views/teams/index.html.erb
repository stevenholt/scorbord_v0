<h1>All Teams</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.city %></td>
        <td><%= team.state %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', team, class:"btn" %>
            <%= link_to 'Edit', edit_team_path(team), class:"btn" %>
            <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, class:"btn btn-success" %>
