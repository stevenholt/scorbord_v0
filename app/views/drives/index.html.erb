<h1>All Drives</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Drive ID</th>
      <th>Game</th>
      <th>Pos(team)</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Plays</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @drives.each do |drive| %>
      <tr>
        <td><%= drive.id %></td>
        <td><%= drive.game_id %></td>
        <td><%= drive.team.name %></td>
        <td><%= drive.start_time %></td>
        <td><%= drive.end_time %></td>
        <td><%= drive.plays.count %></td>
        <td colspan="3">
          <div class="btn-group">
            <%= link_to 'Show', drive, class: "btn btn-default btn-lg" %>
            <%= link_to 'Edit', edit_drive_path(drive), class: "btn btn-default btn-xs" %>
            <%= link_to 'Destroy', drive, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default btn-xs" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drive', new_drive_path, class: "btn btn-success btn-lg" %>
